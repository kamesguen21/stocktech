{% extends 'base.html.twig' %}

{% block title %}Ticker{% endblock %}

{% block body %}
    <h1>Ticker</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticker.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ ticker.date ? ticker.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Open</th>
                <td>{{ ticker.open }}</td>
            </tr>
            <tr>
                <th>Hight</th>
                <td>{{ ticker.hight }}</td>
            </tr>
            <tr>
                <th>Low</th>
                <td>{{ ticker.low }}</td>
            </tr>
            <tr>
                <th>Close</th>
                <td>{{ ticker.close }}</td>
            </tr>
            <tr>
                <th>Adj_close</th>
                <td>{{ ticker.adjClose }}</td>
            </tr>
            <tr>
                <th>Volume</th>
                <td>{{ ticker.volume }}</td>
            </tr>
            <tr>
                <th>Symbol</th>
                <td>{{ ticker.symbol }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('ticker_index') }}">back to list</a>

    <a href="{{ path('ticker_edit', {'id': ticker.id}) }}">edit</a>

    {{ include('ticker/_delete_form.html.twig') }}
{% endblock %}
